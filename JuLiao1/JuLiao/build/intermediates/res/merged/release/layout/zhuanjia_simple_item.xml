<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wxq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/number_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="@color/textlightlightgrey"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/number_im"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/top1" />
    </RelativeLayout>

    <com.liao310.www.widget.ShapedImageView
        android:id="@+id/head"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/number"
        android:background="@drawable/defaultpic"
        android:scaleType="centerCrop"
        wxq:shape_mode="circle" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/head"
        android:text="竞彩牛人"
        android:textColor="@color/textgrey"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/statename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有推荐"
            android:textColor="@color/textred"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/state"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="100"
            android:gravity="center"
            android:textColor="@color/textred"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/statetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/textred"
            android:textSize="10dp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#E8E8E8" />
</RelativeLayout>