<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainback" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/yesterday"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="精选文章"
                android:textColor="@color/textgrey"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/today"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="竞彩过关"
                android:textColor="@color/textgreen"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tomorrow"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="亚盘竞猜"
                android:textColor="@color/textgrey"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iv_bootom_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/yesterday_line"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/textgreen"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/today_line"
                android:layout_width="wrap_content"
                android:layout_height="2dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/textgreen"
                android:scaleType="matrix" />

            <TextView
                android:id="@+id/tomorrow_line"
                android:layout_width="wrap_content"
                android:layout_height="2dip"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/textgreen"
                android:scaleType="matrix"
                android:visibility="invisible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <com.liao310.www.widget.RefreshListView
                android:id="@+id/rl_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="@null"
                android:divider="#EFEFEF"
                android:dividerHeight="0dip"
                android:overScrollMode="never" 
                android:scrollbars="none" />

            <ListView
                android:id="@+id/rl_listview2"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ECECEC"
                android:cacheColorHint="@null"
                android:divider="#EFEFEF"
                android:dividerHeight="0dip"
                android:overScrollMode="never"
                android:scrollbars="none" />
        </RelativeLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
         android:visibility="gone"/>

</RelativeLayout>