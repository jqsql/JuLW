    <RelativeLayout
        android:id="@+id/head1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/APPColor"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="13dp"
            android:paddingLeft="17dp"
            android:src="@drawable/back_icon"/>

        <com.liao310.www.widget.ShapedImageView
            android:id="@+id/head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_back"
            android:background="@drawable/defaultpic"
            android:scaleType="centerCrop"
            wxq:shape_mode="circle"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/head"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/head"
            android:text="竞进球彩人"
            android:textColor="@color/white"
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/head"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/fenshi"/>

            <TextView
                android:id="@+id/fensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="100"
                android:textColor="@color/textlightgrey"
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/wenzhang"/>

            <TextView
                android:id="@+id/wenzhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="100"
                android:textColor="@color/textlightgrey"
                android:textSize="12dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/head"
            android:text="发布于："
            android:textColor="@color/whiteGrey"
            android:textSize="12dp"/>


        <TextView
            android:id="@+id/guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/cornerfulllightgery"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="+ 关注"
            android:textColor="@color/black"
            android:textSize="12dp"/>

        <!--<TextView
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/head"
            android:layout_below="@id/head"
            android:layout_marginRight="5dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/whiteGrey"
            android:textSize="12dp"/>-->
    </RelativeLayout>


