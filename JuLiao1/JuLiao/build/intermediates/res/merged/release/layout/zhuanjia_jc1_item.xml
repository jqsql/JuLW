<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/state"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="赢半"
        android:textColor="@color/textred"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/state"
        android:text="赢半"
        android:textColor="@color/textlightgreen"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/money"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/hostteamname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切尔西"
                android:textColor="@color/textgrey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="VS"
                android:textColor="@color/textgrey"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/gustteamname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切尔西"
                android:textColor="@color/textgrey"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03-20 11:30"
                android:textColor="@color/textlightlightgrey"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="|"
                android:textColor="@color/textlightlightgrey"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/wanfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大小球"
                android:textColor="@color/textlightlightgrey"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="|"
                android:textColor="@color/textlightlightgrey"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/pankou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.75"
                android:textColor="@color/textlightlightgrey"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="|"
                android:textColor="@color/textlightlightgrey"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/gamename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英超"
                android:textColor="@color/textlightlightgrey"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#E8E8E8" />

</RelativeLayout>