        app:cardCornerRadius="6dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_trap_6"
            android:padding="6dp">

           <!-- <com.liao310.www.widget.ShapedImageView
                android:id="@+id/head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/defaultpic"
                android:scaleType="centerCrop"
                wxq:shape_mode="circle"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/head"
                android:layout_toRightOf="@id/head"
                android:layout_marginLeft="5dp"
                android:text="昵称"
                android:textColor="@color/white"
                android:textSize="12dp"/>-->
            <TextView
                android:id="@+id/LianSai_Biaoqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cornerfulllinefull_greenline_whitefull"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="大小球"
                android:textColor="@color/textgreen"
                android:textSize="10dp"/>
            <LinearLayout
                android:id="@+id/LianSai_TimeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/LianSai_Biaoqian">

                <TextView
                    android:id="@+id/LianSai_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:text="英超"/>
                <TextView
                    android:id="@+id/LianSai_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:text="01-01 00:00"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/BottomLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="免费"
                    android:textColor="@color/textgreen"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/result_State"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape_app_4"
                    android:gravity="center"
                    android:text="立即查看"
                    android:textColor="@color/black"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LianSai_TimeLayout"
                android:layout_toLeftOf="@id/BottomLayout"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/LeiTai_Buy_zhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textgreen"
                    android:textSize="12dp"
                    android:text="主队"/>
                <TextView
                    android:id="@+id/LeiTai_Buy_Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="VS"/>
                <TextView
                    android:id="@+id/LeiTai_Buy_ke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/textgreen"
                    android:textSize="12dp"
                    android:text="客队"/>
            </LinearLayout>
        </RelativeLayout>
</LinearLayout>